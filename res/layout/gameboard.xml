<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0" >

        <ImageView
            android:id="@+id/imageViewLeftTopCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:contentDescription="@string/rotateCounterClockwise"
            android:src="@drawable/ic_arrowright" />

        <ImageView
            android:id="@+id/imageViewRightTopDirect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:contentDescription="@string/rotateClockwise"
            android:src="@drawable/ic_arrowleft" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:weightSum="1.0" >

            <ImageView
                android:id="@+id/imageViewLeftTopDirect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:contentDescription="@string/rotateClockwise"
                android:src="@drawable/ic_arrowup" />

            <ImageView
                android:id="@+id/imageViewLeftBottomCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:contentDescription="@string/rotateCounterClockwise"
                android:src="@drawable/ic_arrowdown" />

        </LinearLayout>

        <GridView
            android:id="@+id/gridView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:numColumns="3" >

        </GridView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:weightSum="1.0" >

            <ImageView
                android:id="@+id/imageViewRightTopCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:contentDescription="@string/rotateCounterClockwise"
                android:src="@drawable/ic_arrowup" />

            <ImageView
                android:id="@+id/imageViewRightBottomDirect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:contentDescription="@string/rotateClockwise"
                android:src="@drawable/ic_arrowdown" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0" >

        <ImageView
            android:id="@+id/imageViewLeftBottomDirect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:contentDescription="@string/rotateClockwise"
            android:src="@drawable/ic_arrowright" />

        <ImageView
            android:id="@+id/imageViewRightBottomCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:contentDescription="@string/rotateCounterClockwise"
            android:src="@drawable/ic_arrowleft" />

    </LinearLayout>

</LinearLayout>