<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="ru.naumen.storybook" android:versionCode="3" android:versionName="1.0.0">
  
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="13" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

  <application android:label="@string/app_name" android:icon="@drawable/zen_circle">
    <activity android:name=".MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity android:name="ru.naumen.storycontent.StoryContentActivity" android:noHistory="true"/>
    <activity android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:name="com.google.ads.AdActivity" />
  </application>

</manifest>

